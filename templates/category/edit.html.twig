{% extends 'base.html.twig' %}

{% block title %}Hello QuizEditController!{% endblock %}

{% block body %}
<div class="container">
    <div class="category_name">
        {{category.name}}
    </div>

    <div class="form">
        {{ form_start(form) }}
            {# {{ form_label(form.name, 'Category name', {'label_attr': {'class': 'label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'widget'}})}}

            {{ form_widget(form.type, {'attr': {'class': 'widget'}})}}

            {{ form_widget(form.Submit, {'attr': {'class': 'btn'}})}} #}


            <ul class="tags"
                data-index="{{ form.tags|length > 0 ? form.tags|last.vars.name + 1 : 0 }}"
                data-prototype="{{ form_widget(form.tags.vars.prototype)|e('html_attr') }}"
            ></ul>
        {{ form_end(form) }}
    </div>

    <div class="question">
        {% if questions %}
            {% for question in questions|keys %}
                <div class="question">
                    <div class="question_name">
                        {{keys}}
                    </div>
                    <div class="buttons">
                        <a href="{{path('app_category', {'id': category.id})}}" class="edit">Edit</a>
                        <a href="{{path('app_category_delete',  {'id': category.id})}}" class="delete">Delete</a>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
{% endblock %}
