<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Quiz!{% endblock %}</title>

        {% block stylesheets %}
                <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
                <link href="{{ asset('main.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% set page = app.request.attributes.get('_route') %}
        <nav>
            <ul class="nav nav-pills justify-content-end nav__color">
                <li class="nav-item">
                    <a class="nav__button {% if page == 'app_homepage' %}active{% endif %}" href="{{ path('app_homepage') }}">Homepage</a>
                </li>
                {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav__button {% if page == 'app_login' %}active{% endif %}" href="{{ path('app_login') }}">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav__button {% if page == 'app_register' %}active{% endif %}" href="{{ path('app_register') }}">Register</a>
                    </li>
                {% else %}

                    <li class="nav-item">
                        <a class="nav__button {% if page == 'app_quiz' %}active
                            
                        {% endif %}" href="{{ path('app_quiz') }}">Quiz</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav__button" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
            {% block body %}{% endblock %}
    </body>
    </body>
</html>
