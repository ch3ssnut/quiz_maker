{% extends 'base.html.twig' %}

{% block title %}Hello QuizEditController!{% endblock %}

{% block body %}
<div class="container">
    <div class="quiz__name__title">
        {{quiz.name}}
    </div>
</div>
<div class="container">
    <div class="container__quiz">
    <div class="quiz quiz-container">
        {{ form_start(form) }}
            {{ form_label(form.name, 'Category name', {'label_attr': {'class': 'form__label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form__input'}})}}

            {{ form_widget(form.type, {'attr': {'class': 'quiz__list'}})}}

            {{ form_widget(form.Submit, {'attr': {'class': 'quiz__button'}})}}

        {{ form_end(form) }}
    </div>

        {% if categories %}
            {% for category in categories %}
                <div class="quiz quiz-container">
                    <div class="quiz-container__row">
                        <div class="quiz__name">
                            Category: 
                        </div>
                        <div class="quiz__name-info">
                            {{category.name}}
                        </div>
                    </div>
                    <div class="quiz-container__row">
                        <div class="quiz__name">
                            Questions: 
                        </div>
                        <div class="quiz__name-info">
                            {{category.questions|length}}
                        </div>
                    </div>
                    <div class="quiz-container__row">
                        <div class="quiz__name">
                            Type: 
                        </div>
                        <div class="quiz__name-info">
                            {{category.type}}
                        </div>
                    </div>
                    <div class="quiz__button-row">
                        <a href="{{path('app_category', {'id': category.id})}}" class="quiz__button">Edit</a>
                        <a onclick="return confirm('Are u sure you want to delete this question?')"  href="{{path('app_category_delete',  {'id': category.id})}}" class="quiz__button">Delete</a>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
{% endblock %}
